@model IEnumerable<Libreria.Models.PersonaLibro>

@{
    ViewBag.Title = "Gestion de Prestamos";
}

<h2>Gestion de Prestamos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Prestamo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPersona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdLibro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaSalida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaDevolucion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPersona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdLibro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaSalida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDevolucion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdPersona }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdPersona }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdPersona })
        </td>
    </tr>
}

</table>
